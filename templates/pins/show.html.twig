{% extends 'layouts/base.html.twig' %} 

{% block title pin.title %} 

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto ">
            <article class="pin bg-white rounded shadow">
                <div class="mw-100 overflow-hidden rounded-top">
                    <img src="{{ (pin.imageName ? ('uploads/pins/'~ pin.imageName) : asset('build/images/placeholder.jpg')) |
                    imagine_filter('squared_thumbnail_medium') }}" alt="{{ pin.title }}" 
                    class="w-100"/>
                </div>
                <div class="p-3">
                    <h1 class="h5 text-secondary">{{ pin.title }}</h1>
                    <p class="text-muted ">
                        <small>
                            Submitted {{ pin.createdAt|date('Y-m-d H:i:s') }}
                            by {{ pin.user.fullName}}
                        </small>
                    </p>

                    <p class="pt-3 text-break">
                        {{ pin.description }}
                    </p>

                    <div class="pt-3">
                        <a href="{{ path('app_pins_edit', {id: pin.id}) }}" class="btn btn-light">Edit Artwork</a>
                        <a href="#" onclick="event.preventDefault(); confirm('Are you sure?') && document.getElementById('js_pin_delete_form').submit();" class="btn btn-light">Delete Artwork</a>

                        <form id="js_pin_delete_form" action="{{ path('app_pins_delete', {id:pin.id}) }}" method="POST" style="display: none;">
                            <input type="text" name="csrf" value="{{ csrf_token('pin_deletion_' ~ pin.id) }}">
                            <input type="hidden" name="_method" value="DELETE">
                        </form>
                    </div>
                </div>
            </article>
        </div>
    </div>

{% endblock %}